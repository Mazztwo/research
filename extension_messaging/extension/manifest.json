{

  "description": "Send message to external file.",
  "manifest_version": 2,
  "name": "External Writer",
  "version": "1.0",

  "icons": 
  {
    "48": "icons/message.png"
  },

  "applications": 
  {
    "gecko": 
    {
      "id": "user_app@example.org",
      "strict_min_version": "50.0"
    }
  },

  "background": 
  {
    "scripts": ["background.js"]
  },

  "browser_action": 
  {
    "default_icon": "icons/message.png"
  },


  "permissions": 
  [
    "nativeMessaging",
    "webRequest",
    "<all_urls>"
  ]

  
}