{

    "manifest_version": 2,
    "name": "Count & Log",
    "version": "1.0",
    
    "description": "Reads instances of a word. Replaces/Injects new word? Logs certain requests",

    "icons": 
    {
        "48": "icons/extension_fire.png"
    },
    
  
    "permissions": 
    [
        "activeTab"
    ],
  
    "browser_action": 
    {
        "default_icon": "icons/bar_vader.png",
        "default_title": "Count&Log",
        "default_popup": "popup/which_word.html"
    }
  }

