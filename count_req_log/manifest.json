{

    "manifest_version": 2,
    "name": "count_req_log",
    "version": "1.0",
    
    "description": "Reads instances of a word. Replaces/Injects new word? Logs certain requests",

    "icons": 
    {
        "48": "icons/extension_fire.png"
    },
    
    "content_scripts": 
    [
        {
            "matches": ["<all_urls>"],
            "js": ["count_log.js"]
        }
    ],
  
    "permissions": 
    [
        "activeTab"
    ],
  
    "browser_action": 
    {
        "default_icon": "icons/bar_vader.png",
        "default_title": "Count&Log",
        "default_popup": "popup/choose_beast.html"
    }
  }

